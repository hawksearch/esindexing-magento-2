{
    "name": "hawksearch/esindexing-magento-2",
    "license": "proprietary",
    "description": "Hawksearch ES Indexing module for Magento Open Source and Adobe Commerce",
    "type": "magento2-module",
    "version": "0.7.5",
    "require": {
        "magento/framework": "^103.0.4",
        "magento/module-asynchronous-operations": "^100.4.4",
        "hawksearch/connector": "^2.11.2",
        "ext-json": "*",
        "ext-PDO": "*",
        "ext-mbstring": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpcompatibility/php-compatibility": "^9.3",
        "bitexpert/phpstan-magento": "*",
        "phpstan/extension-installer": "*"
    },
    "conflict": {
        "hawksearch/datafeed": "*",
        "hawksearch/proxy": "*"
    },
    "autoload": {
        "psr-4": {
            "HawkSearch\\EsIndexing\\": ""
        },
        "files": [
            "registration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
