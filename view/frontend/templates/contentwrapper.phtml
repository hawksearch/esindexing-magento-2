<script>
    function addToCart(args) {
        if (this.$parent && this.$parent.$refs.hasOwnProperty('add-to-cart-form')) {
            var form = this.$parent.$refs['add-to-cart-form'];

            if (form.requestSubmit) {
                form.requestSubmit();
            }
            else {
                form.submit();
            }
        }
    }

    function getID(uuid) {
        if (uuid && uuid.includes('_')) {
            return uuid.split('_').pop();
        }
    }
</script>


