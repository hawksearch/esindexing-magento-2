<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="HawkSearch_EsIndexing::css/vue-hawksearch-app.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <!--<referenceBlock name="category.products" remove="true" />-->
            <!--<referenceBlock name="search.result" remove="true" />-->
        </referenceContainer>
        <referenceBlock name="head.additional">
            <block class="HawkSearch\EsIndexing\Block\Html\Head\VueConfig\Searchbox" name="hawksearch.vue.config.searchbox" template="HawkSearch_EsIndexing::vueconfig.phtml">
                <action method="setConfigId">
                    <argument name="id" xsi:type="string">searchbox</argument>
                </action>
            </block>
            <block class="HawkSearch\EsIndexing\Block\Html\Head\VueConfig\Results" name="hawksearch.vue.config.results" template="HawkSearch_EsIndexing::vueconfig.phtml">
                <action method="setConfigId">
                    <argument name="id" xsi:type="string">results</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="top.search">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">HawkSearch_EsIndexing::top-search.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
